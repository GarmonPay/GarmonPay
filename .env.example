# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Stripe (for payments and webhooks)
STRIPE_SECRET_KEY=sk_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Site URL (production)
NEXT_PUBLIC_SITE_URL=https://garmonpay.com

# Optional: Vercel
VERCEL_ENV=production

# Backend API URL for Next.js admin panel integration
NEXT_PUBLIC_BACKEND_API_URL=https://api.garmonpay.com/api

# Backend service env (for /backend)
BACKEND_PORT=4000
BACKEND_APP_ORIGIN=https://garmonpay.com,https://admin.garmonpay.com
BACKEND_SUPABASE_URL=https://your-project.supabase.co
BACKEND_SUPABASE_ANON_KEY=your-anon-key
BACKEND_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
BACKEND_STRIPE_SECRET_KEY=sk_...
BACKEND_STRIPE_WEBHOOK_SECRET=whsec_...

# Flutter mobile build defines (pass via --dart-define)
# API_BASE_URL=https://api.garmonpay.com/api
# ANDROID_REWARDED_AD_UNIT_ID=ca-app-pub-xxxx/yyyy
# IOS_REWARDED_AD_UNIT_ID=ca-app-pub-xxxx/zzzz
